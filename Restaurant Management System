void homeorder(void)
{
	int choice;
	int again;
	int quantity;
	printf("                                    **********************************************\n");
	printf("                                                         MENU\n");
	printf("                                    **********************************************\n");
	char n;
	FILE *nmenu;
	nmenu = fopen("menuu.txt","rt");
	while((n=getc(nmenu))!=EOF)
	{
		printf("%c",n);
	}
	printf("\n\nEnter What You Want :");
	printf("\n\n");
	scanf("%d",&choice);
	if(choice==10)
	{
		printf("Quantity : ");
		scanf(" %d",&quantity);
		total=total + 25*(quantity);
		printf("\n");
		printf("Press 1 To Order Again :\nPress 2 To Get Your Total:\n\nEnter Your Choice :");
		scanf(" %d",&again);
		if(again==1)
		{
			printf("\n\n");
			homeorder();
		}
		else if(again==2)
		{
			printf("Your Total Amount Is :%.2lf\n\n",total);
			int totl = total;

			FILE *ttl;
			ttl = fopen("order.txt","a");
			fprintf(ttl,"\nGrand Total : %d\n",totl);
			total=0;
			fclose(ttl);
			details();
		}
	}
	else if(choice==11)
	{
		printf("Quantity :");
		scanf(" %d",&quantity);
		total=total + 30*(quantity);
		printf("\n");
		printf("Press 1 To Order Again :\nPress 2 To Get Your Total:\n\nEnter Your Choice :");
		scanf(" %d",&again);
