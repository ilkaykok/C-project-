		printf("\n");
		printf("Press 1 To Order Again :\nPress 2 To Get Your Total:\n\nEnter Your Choice :");
		scanf(" %d",&again);
		if(again==1)
		{
			printf("\n\n");
			homeorder();
		}
		else if(again==2)
		{
			printf("Your Total Amount Is :%.2lf\n\n",total);
			int totl = total;
			FILE *ttl;
			ttl = fopen("order.txt","a");
			fprintf(ttl,"\nGrand Total : %d\n",totl);
			fclose(ttl);
			total=0;
			details();
		}
	}
	else if(choice==46)
	{
		printf("Quantity :");
		scanf(" %d",&quantity);
		total=total + 5*(quantity);
		printf("\n");
		printf("Press 1 To Order Again :\nPress 2 To Get Your Total:\n\nEnter Your Choice :");
		scanf(" %d",&again);
		if(again==1)
		{
			printf("\n\n");
			homeorder();
		}
		else if(again==2)
		{
			printf("Your Total Amount Is :%.2lf\n\n",total);
			int totl = total;
			FILE *ttl;
			ttl = fopen("order.txt","a");
			fprintf(ttl,"\nGrand Total : %d\n",totl);
			fclose(ttl);
			total=0;
			details();
		}
	}
	else if(choice==47)
	{
		printf("Quantity :");
		scanf(" %d",&quantity);
		total=total + 5*(quantity);
		printf("\n");
		printf("Press 1 To Order Again :\nPress 2 To Get Your Total:\n\nEnter Your Choice :");
		scanf(" %d",&again);
		if(again==1)
		{
			printf("\n\n");
			homeorder();
		}
		else if(again==2)
		{
			printf("Your Total Amount Is :%.2lf\n\n",total);
			int totl = total;
			FILE *ttl;
			ttl = fopen("order.txt","a");
			fprintf(ttl,"\nGrand Total : %d\n",totl);
			fclose(ttl);
			total=0;
			details();
		}
	}
	else if(choice==48)
	{
		printf("Quantity :");
		scanf(" %d",&quantity);
		total=total + 8*(quantity);
		printf("\n");
		printf("Press 1 To Order Again :\nPress 2 To Get Your Total:\n\nEnter Your Choice :");
		scanf(" %d",&again);
		if(again==1)
		{
			printf("\n\n");
			homeorder();
		}
		else if(again==2)
		{
			printf("Your Total Amount Is :%.2lf\n\n",total);
			int totl = total;
			FILE *ttl;
			ttl = fopen("order.txt","a");
			fprintf(ttl,"\nGrand Total : %d\n",totl);
			fclose(ttl);
			total=0;
			details();
		}
	}
	else if(choice==49)
	{
		printf("Quantity :");
		scanf(" %d",&quantity);
		total=total + 3*(quantity);
		printf("\n");
		printf("Press 1 To Order Again :\nPress 2 To Get Your Total:\n\nEnter Your Choice :");
		scanf(" %d",&again);
		if(again==1)
		{
			printf("\n\n");
			homeorder();
		}
		else if(again==2)
		{
			printf("Your Total Amount Is :%.2lf\n\n",total);
			int totl = total;
			FILE *ttl;
			ttl = fopen("order.txt","a");
			fprintf(ttl,"\nGrand Total : %d\n",totl);
			fclose(ttl);
			total=0;
			details();
		}
	}
	else if(choice==911){
	{
		system("cls");
		customeroption();
	}
	}
	else
	{
		printf("Wrong Input! Re-enter THe Correct Option\n\n");
		customeroption();
	}
}

void details(void)
{

	char name1[20];
	char name2[20];
	char phone[20];
	char district[10];
	char street[10];
	char apartmentnumber[10];
	char doornumber[10];
	printf("Please Give Your Contact Details \n");
	printf(" First Name : ");
	scanf("%s",name1);
	printf("Last Name : ");
	scanf("%s",name2);
	printf("Phone : ");
	scanf("%s",phone);
	printf("District : ");
	scanf("%s",district);
	printf("Street Number : ");
	scanf("%s",street);
	printf("Apartment Number : ");
	scanf("%s",apartmentnumber);
	printf("Door Number : ");
	scanf("%s",doornumber);
	printf("\n\n");
	printf("Your Entered Details Are --->\n");
	FILE *cust;
	cust = fopen("order.txt","a");
	fprintf(cust,"Order Placed By : %s %s\nPhone number : %s\nStreet : %s\nApartment Number : %s\nDoor Number : %s\n",name1,name2,phone,street,apartmentnumber,doornumber);
	fclose(cust);
	printf("    -->First Name:%s\n    -->Last Name:%s\n    -->Phone:%s\n    -->District  :%s\n    -->Street:%s\n    -->Apartment Number:%s\n    -->Door Number:%s\n ",name1,name2,phone,district,street,apartmentnumber,doornumber);
	printf("\n\n\n");
	printf("                       *********************************************************************************************\n");
	printf("                                             Your Order Will Be At Your Door In 30 minutes.\n");
	printf("                                                       .....ENJOY YOUR MEAL.....\n");
	printf("                       *********************************************************************************************\n");

	printf("Press Any To The MainMenu.");
	if(getch())
	mainmenu();
}
